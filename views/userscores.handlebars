<header class="home-header">
        <h1><a href="/">Quiz Hub</a></h1>
        <nav>
            <ul>
                <li>
                    <a href="/createQuiz">Create</a>
                </li>
                <li>
                    <a href="/scores">Scores</a>
                </li>
                <li>
                    <div class="dropdown dropbtn">
                    <a href="#">Categories</a>
                    <i class="fa fa-caret-down"></i>
                    <div class="dropdown-content">
                       {{#each categories as |category|}}
                        <a href="/category/{{category.id}}">{{category.category_name}}</a>
                        {{/each}}
                    </div>
                    </div>
                </li>
                <li>
                    <a href="#" id="logout">Log Out</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>

    <h2> My Scores &#8595; </h2>

    <div class="d-flex justify-content-center">
    <div class="userscore-container col-4">
        {{#each scores as |score|}}
            <article>
                <p>Quiz Name: {{quiz.quiz_name}}</p> 
                <p>Your Score: {{score.total_score}}</p>
            </article>
        {{/each}}
    </div>
    </div>
        <button id="highscoresbtn">Take me to the high scores!</button>

       
</main>
<script src="/js/logout.js"></script>